<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ImageView
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_width="48dp"
        android:layout_margin="6dp"
        android:scaleType="fitXY"
        android:src="@mipmap/ic_launcher"
        android:layout_height="48dp"/>

    <ImageView
        android:id="@+id/left_iv"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_width="172dp"
        android:layout_marginLeft="53dp"
        android:layout_marginBottom="75dp"
        android:background="@android:color/holo_blue_light"
        android:scaleType="fitXY"
        android:layout_height="215dp"/>

    <ImageView
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="84dp"
        android:background="@android:color/holo_blue_light"
        android:scaleType="fitXY"
        app:layout_constraintLeft_toRightOf="@+id/left_iv"
        android:layout_width="459dp"
        android:layout_marginLeft="21dp"
        android:layout_height="191.5dp"/>

    <ImageView
        android:id="@+id/top_v1"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="15dp"
        android:scaleType="fitXY"
        android:background="@android:color/holo_blue_light"
        android:layout_marginRight="15dp"
        android:layout_width="120dp"
        android:layout_height="30dp"/>

    <ImageView
        android:id="@+id/top_v2"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/top_v1"
        android:layout_marginTop="15dp"
        android:scaleType="fitXY"
        android:background="@android:color/holo_blue_light"
        android:layout_marginRight="15dp"
        android:layout_width="120dp"
        android:layout_height="30dp"/>

    <ImageView
        android:id="@+id/top_v3"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/top_v2"
        android:layout_marginTop="15dp"
        android:scaleType="fitXY"
        android:layout_marginRight="15dp"
        android:background="@android:color/holo_blue_light"
        android:layout_width="120dp"
        android:layout_height="30dp"/>

    <TextView
        android:textColor="@color/white"
        android:background="@color/black"
        android:text="Hello World!"
        android:gravity="center"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_width="100dp"
        android:layout_height="20dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>